<div class="artist-header">
  <div class="avatar-xxl">
    <%= image_tag @artist.image_url, class: "avatar-xxl" %>
  </div>
  <div class="artist-menu">
    <h1 class="text-center"><%= @artist.name %></h1>
    <%= link_to "Artists", artists_path  %> |
    <%= link_to "Add Record", new_artist_record_path(@artist) %>
  </div>
</div>

<div id="records">
  <h2>Releases</h2>
  <% if @artist.records.any? %>
    <ul>
      <% @artist.records.each do |record| %>
        <li><%= record.title %> | <%= link_to "Delete", record_path(record), method: :delete %></li>
      <% end %>
    </ul>
  <% else %>
    <p>This artist has no releases yet!</p>
  <% end %>
</div>
